---
import { FONT_COLORS } from "@app/utils/Colors";
---

<h2 class="subtitle">
    <slot/>
</h2>

<style lang="scss" define:vars={{ subColor : FONT_COLORS.subtitle.light, subColorDark : FONT_COLORS.subtitle.dark }}>
    .subtitle{
        color: var(--subColor);
        font-size: 1rem;
        padding: .25rem 0;
    }

    :global(.dark) .subtitle{
        color: var(--subColorDark);
    }

    @media print {
        .subtitle{
            color: gray !important; 
        } 
    }
</style>