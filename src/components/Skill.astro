---
import { getFontColor } from "@app/utils/Colors";
interface Props{
    lightColor?: string,
    darkColor?: string,
}

const { lightColor = '', darkColor=''} = Astro.props

const fontColor = getFontColor(lightColor)
const fontColorDark = getFontColor(darkColor)
---

<span class="skill">
    <slot/>
</span>

<style lang="scss" define:vars={{ lightColor, darkColor, fontColor, fontColorDark }}>
    .skill{
        font-size: .7rem;
        border-radius: 5px;
        padding: .2rem .5rem;
        color: var(--fontColor, white);
        max-height: 22px;
        font-weight: 600;
        background: var(--lightColor, rgb(71, 71, 71));
    }

    :global(.dark){
        .skill{
            background: #1F6FEB;
            color: var(--fontColorDark, white);
            background: var(--darkColor, #1F6FEB);
        }

        .skill:hover{
            cursor: default;
            color: aliceblue;
            background: rgb(58, 58, 58);
        }
    } 

    .skill:hover{
        background: rgb(117, 117, 117);
    }

    @media print{
        .skill{
            display: none !important;
        }
    }
</style>