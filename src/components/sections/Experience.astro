---
import Section from "../Section.astro";
import Article from "@app/components/ExperienceArticle.astro";
import { en, es } from "@cv";
import { MONTHS, obtenerFechaActualISO } from "@app/utils/dateUtils";
//i18n
import { useTranslations } from '@app/i18n/utils'

const { lang } = Astro.props

const { work } = lang === 'es' ? es : en
const t = useTranslations(lang)
---

<Section title={t('section.experience')} hoverColor="yellow">
    <ul>
        {
            work.map(({name, position, startDate, endDate, summary}) => {
                const startSplit = startDate?.split('-')
                const endDateSplit = endDate?.split('-') ?? obtenerFechaActualISO().split('-')
                startDate = `${startSplit[0]}/${MONTHS[startSplit[1]]}`
                endDate = `${endDateSplit[0]}/${MONTHS[endDateSplit[1]]}`
                return (
                    <li>
                        <Article
                            name={name}
                            position={position}
                            startDate={startDate}
                            endDate={endDate}
                            summary={summary}
                        >
                        </Article>
                    </li>
                )
            })
        }
    </ul>
</Section>

<style>
    ul{
        margin: 0;
        padding: 0;
    }
</style>