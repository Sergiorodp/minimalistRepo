---
import { basics } from "@app/resources/cv.json";

//components
import Section from "../Section.astro";

const {name, label, image, location, profiles, phone, email} = basics

const ICONS : Record<string, any> = {
    'GitHub': 'üêô'
}
---

<Section>
    <div class="hero-container">
        <div class="header-info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span> {location.city}, {location.region}</span>
            <footer>
                {
                    email && ( 
                            <a href={`mailto:${email}`} title={`Send a email to ${name} at ${email}`} target="_blank" rel="noopener noreferrer">üìß</a>
                        )
                }
                {
                    phone && (
                    <a href={`tel:${phone}`} title={`call ${name} at ${phone}`} target="_blank" rel="noopener noreferrer">üì±</a>
                    )
                }
                {
                    profiles.map(({network, url, show}) => {
                        const icon = ICONS[network] ?? '‚ù§Ô∏è'

                        return(
                            <a href={url} title={`${name} ${network}`} target="_blank" rel="noopener noreferrer">{icon}</a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={`${name} photo`} width="200"/>
        </figure>
    </div>
</Section>

<style>

    .hero-container{
        margin-top: 4rem;
        display: grid;
        grid-template-columns: repeat(2,1fr);
    }

</style>

