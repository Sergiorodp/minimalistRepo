---
import { basics } from "@app/resources/cv.json";

//components
import Section from "../Section.astro";
import Title from "@app/components/Title.astro"
import Subtitle from "@app/components/SubTitle.astro"

const {name, label, image, location, profiles, phone, email} = basics

const ICONS : Record<string, any> = {
    'GitHub': '🐙',
    'LinkedIn' : '👨🏻‍🦱'
}
---

<Section>
    <div class="hero-container">
        <div class="header-info">
            <h1>{name}</h1>
            <Subtitle>{label}</Subtitle>
            <span> 🌐 {location.city}, {location.region}</span>
            <footer>
                {
                    email && ( 
                            <a href={`mailto:${email}`} title={`Send a email to ${name} at ${email}`} target="_blank" rel="noopener noreferrer">📧</a>
                        )
                }
                {
                    phone && (
                    <a href={`tel:${phone}`} title={`call ${name} at ${phone}`} target="_blank" rel="noopener noreferrer">📱</a>
                    )
                }
                {
                    profiles.map(({network, url, show}) => {
                        const icon = ICONS[network] ?? '❤️'

                        return(
                            <a href={url} title={`${network} - ${name} `} target="_blank" rel="noopener noreferrer">{icon}</a>
                        )
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={`${name}`} width="200"/>
        </figure>
    </div>
</Section>

<style>

    .hero-container{
        margin-top: 4rem;
        display: grid;
        grid-template-columns: repeat(2,1fr);
    }

    h1{
        color: black;
        font-size: 2rem;
        line-height: 1.2;
    }
    span{
        color: grey;
    }

    img{
        position: absolute;
        aspect-ratio: 1/1;
        object-fit: cover;
        width: 200px;
        border-radius: 10px;
    }

    figure{
        display: flex;
        justify-content: center;
    }

    footer{
        display: flex;
        justify-content: center;
        padding: .5rem 0;
        width: 120px;
        gap: 4px;
        justify-content: space-between;
    }

    footer a{
        justify-content: center;
    }

</style>

