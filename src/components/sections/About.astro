---
import Section from "../Section.astro";
import { en, es } from "@cv";

//i18n
import { useTranslations } from '@app/i18n/utils'

const { lang } = Astro.props
const cv = (lang === 'es') ? es : en
const { summary } = cv.basics

const t = useTranslations(lang)

const paraphs = summary.split('\n\n')
---

<Section title="About me" hoverColor="blue">
    {
        paraphs.map(paraph => {
            return(
                <p>{paraph}</p>
                <br>
            )
        })
    }
</Section>

<style>
    div{
        display: flex;
        flex-wrap: wrap;
    }
</style>